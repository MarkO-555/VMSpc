<my:VMSDialog x:Class="VMSpc.UI.DlgWindows.AboutDlg"
        xmlns:my="clr-namespace:VMSpc.UI.DlgWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VMSpc.UI.DlgWindows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"          
        ResizeMode="NoResize"
        Title="About VMSpc" Height="250" Width="400">
    <StackPanel>
        <TextBlock Margin="10" Name="version"    />
        <TextBlock Margin="10" Name="copyright"  />
        <TextBlock Margin="10" Name="moreInfo">
            Please visit our web forum at <Hyperlink NavigateUri="https://www.silverleafelectronics.com" RequestNavigate="Hyperlink_RequestNavigate" Cursor="Hand">www.silverleafelectronics.com</Hyperlink>.
        </TextBlock>
        <TextBlock Margin="10" Name="phone"      />
        <TextBlock Margin="10" Name="address"    />
    </StackPanel>
</my:VMSDialog>
