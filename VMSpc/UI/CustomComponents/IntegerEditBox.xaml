<UserControl x:Class="VMSpc.UI.CustomComponents.IntegerEditBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VMSpc.UI.CustomComponents"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="200">
    <Grid>
        <StackPanel Name="IntEditStack" Orientation="Horizontal">
            <Button Name="DecrementButton" Click="DecrementButton_Click" FontFamily="Marlett" FontSize="20" Content="3"/>
            <TextBox Name="ValueBox" IsReadOnly="True"/>
            <Button Name="IncrementButton" Click="IncrementButton_Click" FontFamily="Marlett" FontSize="20" Content="4"/>
        </StackPanel>
    </Grid>
</UserControl>
